# Aliases

# If these are enabled they will be used instead of any instructions
# they may mask.  For example, alias rm='rm -i' will mask the rm
# application.  To override the alias instruction use a \ before, ie
# \rm will call the real rm not the alias.

# sudo
alias sudo='sudo'

# quit
alias quit='exit'

# easy navigation
alias cd..='cd ../'

# easy navigation
alias ..='cd ../'
alias ....='cd ../../'

# archives
alias mktar='tar -czvf'
alias untar='tar -xvf'
alias ltar='tar -tvf'

# enable color support of ls and also add handy aliases
alias ls='ls -vF --color=always'
alias dir='ls -vF --color=always'

alias grep='grep -i --color=always'
alias fgrep='fgrep -i --color=always'
alias egrep='egrep -i --color=always'

alias diff='diff --color=always'

# some more ls aliases
alias l='ls -vCF --color=always'
alias la='ls -vA --color=always'
alias ll='ls -alvF --color=always'

# Interactive operation...
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Default to human readable figures
alias du='du -h'

# Misc :)
alias whence='type -a'

# df aliases
alias df='/bin/df'
alias gdf='/usr/local/opt/coreutils/libexec/gnubin/df'

# vi -> vim
# use tabs by default
alias vi='vim -p'
alias vim='vim -p'
# vim fzf
alias vif='vim -p $(fzf)'
alias vimf='vim -p $(fzf)'

# vim view
alias vimv='vim -R -M -m'
# vim view fzf
alias vimvf='vim -R -M -m $(fzf)'

# vim diff
alias vimd='vimdiff'
# vim diff fzf
alias vimdf='vimdiff $(fzf)'

# nvim
# use tabs by default
alias nvim='nvim -p'
# nvim fzf
alias nvimf='nvim -p $(fzf)'

# nvim view
alias nvimv='nvim -R -M -m'
# nvim view fzf
alias nvimvf='nvim -R -M -m $(fzf)'

# nvim diff
alias nvimd='\nvim -d'
# nvim diff fzf
alias nvimdf='\nvim -d $(fzf)'

# tree alias
alias tree='tree -C -N'

# matlab
alias matlab-cli='matlab -nodesktop -nosplash'
